---
import Section from "@/components/Section.astro";
import { work } from "@cv"
---

<Section title="Experiencia laboral">
    <ul>
        {work.map(({name, startDate, endDate, position, summary, highlights, url})=>
        {
            const startYear = startDate
            const endYear =
            endDate != null ? endDate : "Actual"
            
            return(
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{name}</h3>
                                <h4>{position}</h4>
                            </div>
                            <time>{startYear} - {endYear}</time>
                        </header>
                        <footer>
                            <p>{summary}</p>
                        </footer>
                      
                        
                    </article>

                </li>
            )
        })}
    </ul>
</Section>

<style>
 <style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
  
</style>